{
	"extends": "@nicknisi/standard/tsconfigs/base",
	"compilerOptions": {
		"composite": true,
		"skipLibCheck": true,
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"typeRoots": ["node_modules/@types", "src/types"]
	},
	"include": ["vite.config.ts", "scripts/"]
}
